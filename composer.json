{
    "name": "poirot/skeleton"
    , "description": "Poirot Skeleton Application."
    , "keywords": [
        "application framework"
        , "poirot"
        , "raya media"
    ]
    , "authors": [
        {
            "name": "Payam Naderi"
            , "email": "naderi.payam@gmail.com"
        }
    ]
    , "config":
    {
        "vendor-dir": "./vendor"
        , "bin-dir"   : "./vendor/bin"
    }
    , "require": {
        "poirot/loader": "dev-devel"
        , "poirot/std": "dev-devel"
        , "poirot/ioc": "dev-devel"
        , "poirot/application": "dev-devel"
    }
    ,"require-dev": {
       "mmucklo/krumo": "^0.5.0"
    }
    , "autoload"  : {
        "files": [
            "index.php"
        ]
    }
    ,"repositories": [
       { "type": "git" ,"url": "https://github.com/phPoirot/Std.git" }
      ,{ "type": "git" ,"url": "https://github.com/phPoirot/Loader.git" }
      ,{ "type": "git" ,"url": "https://github.com/phPoirot/IoC.git" }
      ,{ "type": "git" ,"url": "https://github.com/phPoirot/Application.git" }
    ]
}
