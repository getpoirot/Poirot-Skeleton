{
    "name": "poirot/skeleton"
    , "description": "Poirot Skeleton Application."
    , "keywords": [
        "application framework"
        , "poirot"
        , "raya media"
    ]
    , "authors": [
        {
            "name": "Payam Naderi"
            , "email": "naderi.payam@gmail.com"
        }
    ]
    , "config":
    {
	    "vendor-dir": "_app/vendor"
	    , "bin-dir"   : "_app/vendor/bin"
    }
    , "autoload": {
        "files": ["index.php"]
        , "psr-0": {
            "Poirot\\ArgsResolver": "/poirot/args-resolver"
        }
    }
    , "require": {
        "poirot/core": "dev-master"
            , "poirot/autoloader": "dev-master"
        , "poirot/application": "dev-master"
            , "poirot/router": "dev-master"
            , "poirot/events": "dev-master"
            , "poirot/http": "dev-master"
            , "poirot/action-responder": "dev-master"
                , "poirot/pathuri": "dev-master"
                , "poirot/stream": "dev-master"
            , "poirot/container": "dev-master"
    }
    , "require-dev":
    {
        "oodle/krumo": "*"
    }
}
